<section>
    <div class="text-center">
        <h3>Create user</h3>
    </div>
    <div class="container p-5 ">
        <div class="col-lg-6 shadow-sm p-3">
            <form>
                <div class="form-group p-2">
                    <label for="exampleInputEmail1">Username</label>
                    <input type="text" class="form-control shadow-sm" placeholder="Username">
                </div>
                <div class="form-group p-2">
                    <label for="exampleInputEmail1">Email address</label>
                    <input type="email" class="form-control shadow-sm" id="exampleInputEmail1"
                        aria-describedby="emailHelp" placeholder="Email">

                </div>
                <div class="form-group p-2">
                    <label for="exampleInputPassword1">Password</label>
                    <input type="password" class="form-control shadow-sm" id="exampleInputPassword1"
                        placeholder="Password">
                </div>
                <button type="submit" class="btn btn-primary shadow-sm">Create</button>
            </form>
        </div>


    </div>
</section>