<section>
    <div class="text-center">
        <h3>Admin page</h3>
    </div>
    <div class="container">
        <div>
            <button class='btn btn-primary btn-primary me-md-2' type='button'><a href=/admin/adduser
                    style="text-decoration: none; color:white">Add users</a></button>
        </div>
    </div>
    <div class="container p-3">
        <table class=" table table-striped table-hover table-bordered table-sm">
            <thead>
                <tr>

                    <th scope="col">Username</th>
                    <th scope="col">Mail</th>
                    <th scope="col">Password</th>
                    <th scope="col">Handle</th>
                </tr>
            </thead>
            <tbody>
                {{#each newusers}}
                <tr>
                    <td>{{this.username}}</td>
                    <td>{{this.mail}}</td>
                    <td>{{this.password}}</td>
                    <td>
                        <a href="/admin/edit-user/{{this._id}}" class="btn btn-primary">Edit</a>
                        <a href="/admin/delete-user/{{this._id}}" class="btn btn-danger"
                            onclick="return confirm('Delete {{this.username}}?')">Delete</a>
                    </td>
                </tr>
                {{/each}}

            </tbody>
        </table>
    </div>
</section>