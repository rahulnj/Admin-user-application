<head>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.2/css/jquery.dataTables.css">
</head>
<section>
    <div class="text-center">
        <h3>Admin page</h3>
    </div>
    <div class="container">
        <div>
            <button class='btn btn-primary btn-primary me-md-2' type='button'><a href=/admin/adduser
                    style="text-decoration: none; color:white">Add users</a></button>
        </div>
    </div>
    <div class="container p-3">
        <table class=" table table-striped table-hover table-bordered table-sm" id="usertable">
            <thead>
                <tr>

                    <th scope="col">Username</th>
                    <th scope="col">Mail</th>

                    <th scope="col">Handle</th>
                </tr>
            </thead>
            <tbody>
                {{#each newusers}}
                <tr>
                    <td>{{this.username}}</td>
                    <td>{{this.mail}}</td>

                    <td>
                        <a href="/admin/edit-user/{{this._id}}" class="btn btn-primary">Edit</a>
                        <a href="/admin/delete-user/{{this._id}}" class="btn btn-danger"
                            onclick="return confirm('Delete {{this.username}}?')">Delete</a>
                    </td>
                </tr>
                {{/each}}

            </tbody>
        </table>
    </div>
</section>

<script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk="
    crossorigin="anonymous"></script>
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.11.2/js/jquery.dataTables.js"></script>
<script>
    $(document).ready(function () {
        $('#usertable').DataTable();
    });
</script>