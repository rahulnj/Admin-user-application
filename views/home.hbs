<header>
    <nav class='navbar navbar-light bg-light'>
        <div class='container-fluid'>
            <a class='navbar-brand' href=''>
                <img src='https://upload.wikimedia.org/wikipedia/commons/thumb/d/df/Shopping_cart_icon.svg/1250px-Shopping_cart_icon.svg.png'
                    alt='' width='30' height='24' class='d-inline-block align-text-top fw-3' />

            </a>
            <a class='navbar-brand' href=''>
                Hi, {{user.username}}
            </a>


            <div class='d-grid gap-2 d-md-flex justify-content-md-end'>
                {{#if user}}
                <button class='btn btn-primary btn-primary btn-danger me-md-2' type='button'><a href='/home/logout'
                        style="text-decoration: none; color:white">Log Out</a></button>
                {{else}}
                <button class='btn btn-primary btn-primary me-md-2' type='button'><a href='/'
                        style="text-decoration: none; color:white">Sign in</a></button>
                {{/if}}
            </div>
        </div>

    </nav>
</header>
<section>
    <div class='container-fluid'>
        <div class='container'>
            <div class='row mt-5'>
                {{#each products}}
                <div class='col-md-3 shadow-sm'>
                    <div class='card' style='width: 15rem; height:25rem;'>
                        <img src='{{this.image}}' class='card-img-top' alt='...' />
                        <div class='card-body'>
                            <h5 class='card-title'>{{this.name}}</h5>
                            <p class='card-text'>{{this.description}}</p>
                            <a href='#' class='btn btn-primary'>Add to cart</a>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</section>